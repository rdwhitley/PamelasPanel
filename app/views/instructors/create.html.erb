<h1>Admin Instructor Creation</h1>

<%= form_for Instructor.new, url: "/created/instructor", method: "post" do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :fname %><br />
    <%= f.text_field :fname, autofocus: true, autocomplete: "fname" %>
  </div> 

  <div class="field">
    <%= f.label :lname %><br />
    <%= f.text_field :lname, autofocus: true, autocomplete: "lname" %>
  </div> 

  <div class="field">
      <%= f.label :salary %><br />
      <%= f.number_field :salary, autocomplete: "salary" %>
    </div>
    
    <div class="field">
      <%= f.label :age %><br />
      <%= f.number_field :age, autocomplete: "age" %>
    </div>

    <div class="field">
      <%= f.label :Admin %><br />
      <%= f.check_box :admin, autocomplete: "admin" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    
    <div class="actions" id='update' onClick=delete()>
      <%= f.submit "Update" %>
    </div>
<% end %>
